<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:TechFest.Helpers;assembly=TechFest"
			 xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
			 xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             x:Class="TechFest.Pages.SpeakerListPage"
			 BackgroundColor="Transparent">
	<ContentPage.Content>
    <Grid BackgroundColor="Transparent" >
		 <Image Aspect="AspectFill" Source="{helpers:ImageResource TechFest.Images.SessionsBackground.png}" />
    	<ListView ItemsSource="{Binding Speakers}" 
              BackgroundColor="Transparent"
              HasUnevenRows="True"
              SeparatorVisibility="None">
    		<ListView.ItemTemplate>
      			<DataTemplate>
              		<ViewCell>
                		<Grid>
							<Grid.ColumnDefinitions>
                    			<ColumnDefinition Width="*" />
                    			<ColumnDefinition Width="*" />
                  				</Grid.ColumnDefinitions>
                  			<StackLayout Margin="7" Spacing="0" Grid.Column="0" HorizontalOptions="Center">
								<StackLayout.GestureRecognizers>
									<TapGestureRecognizer Command="{Binding Speaker1Selected}" />
								</StackLayout.GestureRecognizers>
                  				<ffimageloading:CachedImage HorizontalOptions="Center" VerticalOptions="Center"
											WidthRequest="170" HeightRequest="170" 
											Aspect="AspectFit"
											Source="{Binding Speaker1.ThumbnailUrl}">
									<ffimageloading:CachedImage.Transformations>
										<fftransformations:RoundedTransformation />
									</ffimageloading:CachedImage.Transformations>
								</ffimageloading:CachedImage>
                    		<Label HorizontalOptions="Start" TextColor="White" FontAttributes="Bold" Text="{Binding Speaker1.Name}" />
                    		<Label HorizontalOptions="Start" LineBreakMode="TailTruncation" TextColor="Aqua" Text="{Binding Speaker1.Company}" />
                  		</StackLayout>
                  		<StackLayout Margin="5" Spacing="0" Grid.Column="1" HorizontalOptions="Center">
							<StackLayout.GestureRecognizers>
								<TapGestureRecognizer Command="{Binding Speaker1Selected}" />
							</StackLayout.GestureRecognizers>
							<ffimageloading:CachedImage HorizontalOptions="Center" VerticalOptions="Center"
											WidthRequest="170" HeightRequest="170" 
											Aspect="AspectFit" 
											Source="{Binding Speaker2.ThumbnailUrl}">
									<ffimageloading:CachedImage.Transformations>
										<fftransformations:RoundedTransformation />
									</ffimageloading:CachedImage.Transformations>
								</ffimageloading:CachedImage>
                    		<Label HorizontalOptions="Start" TextColor="White" FontAttributes="Bold" Text="{Binding Speaker2.Name}" />
                    		<Label HorizontalOptions="Start" LineBreakMode="TailTruncation" TextColor="Aqua" Text="{Binding Speaker2.Company}" />
                  		</StackLayout>
                		</Grid>
              		</ViewCell>
      			</DataTemplate>
    		</ListView.ItemTemplate>
  		</ListView>
      </Grid>
	</ContentPage.Content>
</ContentPage>